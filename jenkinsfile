pipeline {
            agent any
	    tools {
        	maven 'Maven 3.8.3'
    	    }
            stages {
                stage('Git Progress') {
            steps {
                git  branch: 'main', credentialsId: 'github_cred', url: 'https://github.com/Shin9184/mvn.git'
            }
        }
	stage('Build') {
            steps {
		sh 'mvn -Dmaven.test.failure.ignore=true install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Publish Test Result') {
            steps {
                junit '**/build/test-results/test/*.xml'
            }
        }
        
        }
}
