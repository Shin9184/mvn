pipeline {
            agent any

	    
            stages {
                stage('Git Progress') {
            steps {
                git  branch: 'main', credentialsId: 'github_cred', url: 'https://github.com/Shin9184/mvn.git'
            }
        }
	
	stage ('Build') {
		steps {
			git url: 'https://github.com/Shin9184/mvn'
			withMaven {
				sh "mvn clean verify"
			}
		}
	}
	
	
	
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        
    }
}
