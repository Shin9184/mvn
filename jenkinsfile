pipeline {
            agent any

	    
            stages {
                stage('Git Progress') {
            steps {
                git  branch: 'main', credentialsId: 'github_cred', url: 'https://github.com/Shin9184/mvn.git'
            }
        }
	
	stage('Ant build') {
            steps {
                withAnt(installation: 'Maven') {
                    sh 'chmod +x ./mvnw'
                    sh './mvnw clean package'
		}
            }
        }
	
	
	
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        
    }
}
